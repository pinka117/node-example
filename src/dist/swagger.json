{
  "openapi": "3.0.0",
  "info": {
    "title": "Example API"
  },
  "paths": {
    "/api/user/signup": {
      "post": {
        "summary": "Create a user",
        "requestBody": {
          "required": "true",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "mail": {
                    "type": "string",
                    "format": "email"
                  },
                  "surname": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                },
                "required": [
                  "name",
                  "mail",
                  "surname",
                  "password"
                ],
                "additionalProperties": false
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Creation successful"
          },
          "400": {
            "description": "Unable to signup"
          }
        }
      }
    }
  },
  "definitions": {
    "userRequest": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "mail": {
          "type": "string",
          "format": "email"
        },
        "surname": {
          "type": "string"
        },
        "password": {
          "type": "string"
        }
      },
      "required": [
        "name",
        "mail",
        "surname",
        "password"
      ],
      "additionalProperties": false
    }
  }
}
